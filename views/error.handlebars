<link rel="stylesheet" href="/css/lists.css" />
<body>
    <h3>Error</h3>
    <p>{{message}}</p>

    <a href="/homepage">Back to Home</a>
    <br><br><br>


{{!-- Main Title for list --}}
<div class="p-4 mb-4  text-center border-bottom border-5">
    <h1 class="list-title display-3" id="title">{{listTitle}} Nerd List</h1>
    
</div>


{{!-- List Starter HTML --}}
<div class="container">
    <div class="row swim-lanes text-center justify-content-between item-container">
        <div class="col-12 col-lg-4 d-flex item-card">
            <div id="to-do" class="card border-dark mb-3 lane flex-grow-1">
                <div class="card-header">
                    <h2 class="card-title mb-1">Nerd Stuff To Try</h2>
                </div>
                <div class="card-body bg-dark">
                    <div id="todo-cards">
                        {{#each todoItems}}
                        <div id="{{id}}" class="list-group-item" draggable="true" ondragstart="drag(event)">
                            {{title}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4 d-flex item-card">
            <div id="in-progress" class="card border-dark mb-3 lane flex-grow-1">
                <div class="card-header">
                    <h2 class="card-title mb-1">In Proccess Nerd Stuff</h2>
                </div>
                <div class="card-body bg-dark">
                    <div id="in-progress-cards">
                        {{#each inProcessItems}}
                        <div id="{{id}}" class="list-group-item" draggable="true" ondragstart="drag(event)">
                            {{title}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4 d-flex item-card">
            <div id="done" class="card border-dark mb-3 lane flex-grow-1">
                <div class="card-header">
                    <h2 class="card-title mb-1">Finished Nerd Stuff</h2>
                </div>
                <div class="card-body bg-dark">
                    <div id="done-cards">
                        {{#each doneItems}}
                        <div id="{{id}}" class="list-group-item" draggable="true" ondragstart="drag(event)">
                            {{title}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Add List Item Button --}}
<div class="container">
    <div class="text-center mb-5">
        <a class="btn main-t-button" href="/items/create">Add Item</a>
    </div>

    {{!-- Add Item Modal --}}
    <div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title" id="formModalLabel">Add Item</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="item-form" action="/items" method="POST">
                        <div class="mb-3">
                            <label for="item-name" class="form-label">Item Name</label>
                            <input type="text" class="form-control bg-secondary text-light" id="item-name" name="item-name" required />
                        </div>
                        <div class="mb-3">
                            <label for="item-description" class="form-label">Item Description</label>
                            <textarea class="form-control bg-secondary text-light" id="task-description" name="item-description" rows="3"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="item-start-date" class="form-label">Date Started</label>
                        </div>
                        <input type="date" class="form-control" id="item-start-date" name="item-start-date"/>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary add-t-button">Add Item</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>